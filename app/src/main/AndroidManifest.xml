<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sudhirkhanger.app.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MusicStructureActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistActivity"
            android:label="@string/title_activity_artist"
            android:parentActivityName=".MusicStructureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sudhirkhanger.app.musicstructureapp.MusicStructureActivity"/>
        </activity>
        <activity
            android:name=".AlbumActivity"
            android:label="@string/title_activity_album"
            android:parentActivityName=".MusicStructureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sudhirkhanger.app.musicstructureapp.MusicStructureActivity"/>
        </activity>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/title_activity_playlist"
            android:parentActivityName=".MusicStructureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sudhirkhanger.app.musicstructureapp.MusicStructureActivity"/>
        </activity>
        <activity
            android:name=".GenreActivity"
            android:label="@string/title_activity_genre"
            android:parentActivityName=".MusicStructureActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sudhirkhanger.app.musicstructureapp.MusicStructureActivity"/>
        </activity>
    </application>

</manifest>